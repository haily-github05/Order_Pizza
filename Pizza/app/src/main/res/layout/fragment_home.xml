<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.fragment.HomeFragment">


    <LinearLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_table_tag"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/search1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Tìm món ăn..."
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:inputType="text"
                android:background="@android:color/transparent" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search"
                android:contentDescription="Search Icon"
                android:layout_marginStart="8dp" />

        </LinearLayout>
        <FrameLayout
            android:id="@+id/searchResultContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/search1"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Hình ảnh pizza -->

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:id="@+id/greetingText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chào buổi trưa"
                                    android:textSize="20dp"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:id="@+id/guestLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" Quý khách!"
                                    android:textColor="@color/blue"
                                    android:textStyle="bold"
                                    android:textSize="20dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tableInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chúng tôi sẽ trả đồ cho bạn tại bàn: BAN06"
                                android:textSize="14sp"
                                android:background="@drawable/bg_table_tag"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"
                                android:layout_marginBottom="16dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:gravity="center">

                                <LinearLayout
                                    android:id="@+id/order"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="8dp">

                                    <ImageView
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:src="@drawable/checklist"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/order"
                                        android:textSize="14sp"
                                        android:layout_marginTop="8dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/contact"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="8dp">

                                    <ImageView
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:src="@drawable/staff"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Gọi nhân viên"
                                        android:textSize="14sp"
                                        android:layout_marginTop="8dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/feedback"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="8dp">

                                    <ImageView
                                        android:layout_width="64dp"
                                        android:layout_height="64dp"
                                        android:src="@drawable/feedback"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Đánh giá"
                                        android:textSize="14sp"
                                        android:layout_marginTop="8dp"/>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                        <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Có Thể Bạn Sẽ Thích"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:paddingTop="4dp"
                        android:clipToPadding="false"
                        android:scrollbars="none"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:importantForAccessibility="no">

                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:text="Siêu ưu đãi"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <!-- Pizza 1 -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="220dp"
                                    android:layout_height="120dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/km_pizza" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pizza Khuyến Mãi"
                                    android:textSize="16sp"
                                    android:layout_marginTop="6dp"
                                    android:textColor="#000000" />
                            </LinearLayout>

                            <!-- Pizza 3 -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="220dp"
                                    android:layout_height="120dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/km_pizza3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pizza 3 Miếng"
                                    android:textSize="16sp"
                                    android:layout_marginTop="6dp"
                                    android:textColor="#000000" />
                            </LinearLayout>

                            <!-- Pizza 2 -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="12dp"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="220dp"
                                    android:layout_height="120dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/km_pizza2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pizza Ưu Đãi"
                                    android:textSize="16sp"
                                    android:layout_marginTop="6dp"
                                    android:textColor="#000000" />
                            </LinearLayout>

                            <!-- Pizza 4 -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="220dp"
                                    android:layout_height="120dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/km_pizza4" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pizza Đặc Biệt"
                                    android:textSize="16sp"
                                    android:layout_marginTop="6dp"
                                    android:textColor="#000000" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Thực đơn"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="8dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/add2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/menu1"
                        android:layout_gravity="center"
                        android:paddingStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Horizontal ScrollView -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Combo 1 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="220dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/combo2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COMBO 1"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <!-- Combo 2 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="220dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/combo3_3ng" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COMBO 3 Người"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <!-- Combo 3 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="220dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/combo4_btrua" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COMBO Bữa Trưa"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <!-- Combo 4 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="220dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/combo1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COMBO 4"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <!-- Combo 5 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="220dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/combo5_1ng" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COMBO 1 Người"
                            android:textSize="16sp"
                            android:layout_marginTop="6dp"
                            android:textColor="#000000" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Liên hệ với PIZZA HOT"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/tvSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_textview"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_lienhe"
                android:color="@color/red"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cần sự hỗ trợ?"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_underlined"
                android:textColor="@color/red"
                android:paddingStart="20dp"
                android:paddingEnd="12dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_textview"
            android:padding="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_dkdk"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều kiện và điều khoản"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>
<!--    <FrameLayout-->
<!--        android:id="@+id/searchResultContainer"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_gravity="top"-->
<!--        android:background="#FFFFFF"-->
<!--        android:elevation="6dp" />-->
</androidx.core.widget.NestedScrollView>

