<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- CÃ¡c tab -->
            <TextView
                android:id="@+id/tabMua1Tang1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="@string/tab_buy_one_get_one"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tabMua1Duoc3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="@string/tab_buy_one_get_three"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tabCombo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="@string/tab_combo"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tabPizza"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="@string/tab_pizza"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tabDouong"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="@string/tab_drinks"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tabMybox"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="@string/tab_my_box"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tabMenu49k"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="@string/tab_menu_49k"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tabPasta"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="@string/tab_pasta"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/offerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:nestedScrollingEnabled="true"
        android:clipToPadding="false"
        android:scrollbars="none"/>
</LinearLayout>
