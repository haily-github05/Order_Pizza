<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Các tab -->
            <TextView
                android:id="@+id/tabMua1Tang1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="MUA 1 TẶNG 1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tabMua1Duoc3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="MUA 1 ĐƯỢC 3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tabCombo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="COMBO"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tabPizza"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="PIZZA"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tabDouong"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="ĐỒ UỐNG"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tabMybox"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="MY BOX"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tabMenu49k"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="MENU 49K"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tabPasta"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:text="PASTA"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/tab_unselected_bg"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/offerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:nestedScrollingEnabled="true"
        android:clipToPadding="false"
        android:scrollbars="none"/>
</LinearLayout>
