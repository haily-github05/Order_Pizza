<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.UserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tiêu đề -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="18dp"
                    android:src="@drawable/icon_person"
                    android:contentDescription="Avatar người dùng" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="Cài Đặt Tài Khoản"
                    android:textColor="@color/red"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 1. Theo dõi đơn hàng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#4CAF50"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingVertical="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Theo dõi đơn hàng"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingStart="10dp"/>

                <ImageView
                    android:id="@+id/muiten"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/right"
                    android:contentDescription="Mũi tên điều hướng" />
            </LinearLayout>

            <!-- 2. Thành viên -->
            <LinearLayout
                android:id="@+id/tabthanhvien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_textview"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/icon_account"
                    android:contentDescription="Icon tài khoản"
                    android:padding="1dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành viên"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 3. Thông báo -->
            <LinearLayout
                android:id="@+id/tabthongbao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_textview"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/icon_bell"
                    android:contentDescription="Icon thông báo"
                    android:padding="1dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông báo"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 4. Liên hệ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_textview"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liên hệ"
                    android:textSize="16sp"
                    android:paddingLeft="10dp" />

                <ImageView
                    android:id="@+id/icon_lienhe"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/icon_lienhe"
                    android:contentDescription="Icon liên hệ" />

                <ImageView
                    android:id="@+id/icon_fb"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/icon_fb"
                    android:contentDescription="Icon Facebook" />

                <ImageView
                    android:id="@+id/icon_email"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/icon_email"
                    android:contentDescription="Icon email" />
            </LinearLayout>

            <!-- 5. Chuyển sang tiếng Anh -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_textview"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chuyển sang tiếng Anh"
                    android:textSize="16sp"
                    android:paddingLeft="10dp"/>
            </LinearLayout>

            <!-- 6. Gmail cửa hàng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvSupport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="12dp"
                    android:text="Gmail: support@pizzapp.vn"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
